{
  "name": "@moontai0724/package-template",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "description": "An npm package template.",
  "files": [
    "dist"
  ],
  "main": "dist/index.min.js",
  "module": "dist/index.min.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c --configPlugin typescript --bundleConfigAsCjs",
    "test": "vitest",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint --cache-location node_modules/.cache/eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "prepare": "husky || true"
  },
  "keywords": [
    "package",
    "template"
  ],
  "author": "moontai0724",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.0",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "rollup": "^4.14.1",
    "rollup-plugin-dts": "^6.1.0",
    "semantic-release": "^23.0.7",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --cache-location node_modules/.cache/eslint",
    "*.**": "prettier --check --ignore-unknown"
  }
}
